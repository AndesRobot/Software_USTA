def q1():
    print("Q1: Esperar persona (waiting_person)")
    while True:
        char = yield
        if char == 'a':
            yield from q1()
        elif char == 'b':
            yield from q2()
        else:
            break

def q2():
    print("Q2: Indicar que está listo (notifying_reading)")
    while True:
        char = yield
        if char == 'c':
            yield from q1()
        elif char == 'd':
            yield from q3()
        else:
            break

def q3():
    print("Q3: Seguir persona (following_person)")
    while True:
        char = yield
        if char == 'e':
            yield from q4()
        elif char == 'f':
            yield from q3()
        else:
            break

def q4():
    print("Q4: Esperar persona detenida / Detectar indicación (detecting_indication)")
    while True:
        char = yield
        if char == 'g':
            yield from q3()
        elif char == 'h':
            yield from q5()
        else:
            break

def q5():
    print("Q5: Detectar bolsa (recognition_bag)")
    while True:
        char = yield
        if char == 'i':
            yield from q6()
        elif char == 'j':
            yield from q4()
        else:
            break

def q6():
    print("Q6: Navegar a bolsa (navegation_to_bag)")
    while True:
        char = yield
        if char == 'k':
            yield from q7()
        else:
            break

def q7():
    print("Q7: Recoger bolsa (picking_up_bag)")
    while True:
        char = yield
        if char == 'l':
            yield from q8()
        else:
            break

def q8():
    print("Q8: Avanzar a home (homing)")
    while True:
        char = yield
        if char == 'm':
            yield from q9()
        elif char == 'n':
            yield from q10()
        else:
            break

def q9():
    print("Q9: Detectar obstáculos (detecting_obstacles)")
    while True:
        char = yield
        if char == 'o':
            yield from q9()
        elif char == 'p':
            yield from q8()
        else:
            break

def q10():
    print("Q10: Entregar bolsa (delivering_bag)")
    while True:
        char = yield
        if char == 'q':
            yield from q11()
        else:
            break

def q11():
    print("Q11: Hacer fila (queueing)")
    while True:
        char = yield
        if char == 'r':
            yield from q1()
        else:
            break

def fsm():
    state = q1()
    next(state)
    while True:
        try:
            char = input("Presiona una tecla (a–r) o 'exit' para salir: ").lower()
            if char == 'exit':
                break
            state.send(char)
        except StopIteration:
            print("Estado no válido o final alcanzado.")
            break

if __name__ == "__main__":
    fsm()
